<!-- app/views/foods/new.html.erb -->
<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-semibold mb-4">Add New Food</h2>

  <%= form_with(model: @food, url: foods_path, method: :post, class: "space-y-4") do |form| %>
    <div class="flex flex-col">
      <%= form.label :name, class: "mb-1 text-sm font-medium text-gray-600" %>
      <%= form.text_field :name, class: "py-2 px-3 border rounded-md focus:outline-none focus:ring focus:border-blue-500", required: true %>
    </div>

    <div class="flex flex-col">
      <%= form.label :measurement_unit, class: "mb-1 text-sm font-medium text-gray-600" %>
      <%= form.text_field :measurement_unit, class: "py-2 px-3 border rounded-md focus:outline-none focus:ring focus:border-blue-500", required: true %>
    </div>

    <div class="flex flex-col">
      <%= form.label :price, class: "mb-1 text-sm font-medium text-gray-600" %>
      <%= form.number_field :price, class: "py-2 px-3 border rounded-md focus:outline-none focus:ring focus:border-blue-500", required: true %>
    </div>

    <div class="flex flex-col">
      <%= form.label :quantity, class: "mb-1 text-sm font-medium text-gray-600" %>
      <%= form.number_field :quantity, class: "py-2 px-3 border rounded-md focus:outline-none focus:ring focus:border-blue-500", required: true %>
    </div>

    <div class="mt-4">
      <%= form.submit "Add Food", class: "py-2 px-4 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:border-blue-700" %>
    </div>
  <% end %>

  <%= link_to "Back to Food List", foods_path, class: "text-blue-500 hover:underline mt-2 inline-block" %>
</div>
