<div class="flex flex-col w-full">
  <h1 class="font-bold text-4xl mb-4">Recipes</h1>
  <%= link_to "Add New Recipe", new_recipe_path, class: "bg-blue-500 text-white py-2 px-4 rounded mb-4 inline-block self-end" %>

  <ul>
    <% @recipes.each do |recipe| %>
      
      <li class="flex border-4 rounded-md p-4 mb-4">
        <div class="w-1/3 mr-4 flex flex-col items-center truncate">
        <%= link_to recipe_path(recipe) do %>
          <h1 class="font-bold text-2xl mb-6"><%= recipe.name %></h1><% end %>
            <%= button_to "Delete", recipe_path(recipe), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "text-red-500 hover:underline" %>
        </div>
        <p class="flex-1 border-l-2 p-2"><%= recipe.description %></p>
      </li> 
      
    <% end %>
  </ul>
</div>

