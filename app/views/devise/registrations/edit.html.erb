<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-semibold mb-4">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex flex-col">
      <%= f.label :email, class: "mb-1 text-sm font-medium text-gray-600" %>
      <%= f.email_field :email, class: "py-2 px-3 border rounded-md focus:outline-none focus:ring focus:border-blue-500", autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-gray-600">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="flex flex-col">
      <%= f.label :password, class: "mb-1 text-sm font-medium text-gray-600" %> <span class="text-xs">(leave blank if you don't want to change it)</span>
      <%= f.password_field :password, class: "py-2 px-3 border rounded-md focus:outline-none focus:ring focus:border-blue-500", autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <div class="text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</div>
      <% end %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password_confirmation, class: "mb-1 text-sm font-medium text-gray-600" %>
      <%= f.password_field :password_confirmation, class: "py-2 px-3 border rounded-md focus:outline-none focus:ring focus:border-blue-500", autocomplete: "new-password" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :current_password, class: "mb-1 text-sm font-medium text-gray-600" %> <span class="text-xs">(we need your current password to confirm your changes)</span>
      <%= f.password_field :current_password, class: "py-2 px-3 border rounded-md focus:outline-none focus:ring focus:border-blue-500", autocomplete: "current-password" %>
    </div>

    <div class="mt-4">
      <%= f.submit "Update", class: "py-2 px-4 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:border-blue-700" %>
    </div>
  <% end %>

  <h3 class="mt-6 text-xl font-semibold">Cancel my account</h3>

  <div class="text-gray-600">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-red-500 hover:underline" %></div>

  <%= link_to "Back", :back, class: "text-blue-500 hover:underline" %>
</div>
