<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-semibold mb-4">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex flex-col">
      <%= f.label :name, class: "mb-1 text-sm font-medium text-gray-600" %>
      <%= f.text_field :name, class: "py-2 px-3 border rounded-md focus:outline-none focus:ring focus:border-blue-500", autofocus: true, autocomplete: "name" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :email, class: "mb-1 text-sm font-medium text-gray-600" %>
      <%= f.email_field :email, class: "py-2 px-3 border rounded-md focus:outline-none focus:ring focus:border-blue-500", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password, class: "mb-1 text-sm font-medium text-gray-600" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, class: "py-2 px-3 border rounded-md focus:outline-none focus:ring focus:border-blue-500", autocomplete: "new-password" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password_confirmation, class: "mb-1 text-sm font-medium text-gray-600" %>
      <%= f.password_field :password_confirmation, class: "py-2 px-3 border rounded-md focus:outline-none focus:ring focus:border-blue-500", autocomplete: "new-password" %>
    </div>

    <div class="mt-4 mb-4">
      <%= f.submit "Sign up", class: "py-2 px-4 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:border-blue-700 mb-4" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

