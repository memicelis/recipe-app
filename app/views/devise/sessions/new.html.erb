<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-semibold mb-4">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <div class="flex flex-col">
      <%= f.label :email, class: "mb-1 text-sm font-medium text-gray-600" %>
      <%= f.email_field :email, class: "py-2 px-3 border rounded-md focus:outline-none focus:ring focus:border-blue-500", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password, class: "mb-1 text-sm font-medium text-gray-600" %>
      <%= f.password_field :password, class: "py-2 px-3 border rounded-md focus:outline-none focus:ring focus:border-blue-500", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "mr-2 border-gray-300" %>
        <%= f.label :remember_me, class: "text-sm text-gray-600" %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= f.submit "Log in", class: "py-2 px-4 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:border-blue-700 mb-4" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

